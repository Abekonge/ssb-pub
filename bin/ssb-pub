#!/bin/sh

docker run -d
  --name ${NAME} \
  -v ${DATA}:/home/node/.ssb/ \
  -e ssb_host=${HOST} \
  -p 8008:8008 \
  --restart unless-stopped \
# `--memory` sets an upper memory limit of your total memory minus 200 MB (for example: on a 1 GB server this could be simplified to `--memory 800m`)
  --memory ${MEMORY_LIMIT} \
  ${IMAGE}
EOF
